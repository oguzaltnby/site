{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"],
      "#imports": [".nuxt/imports.d.ts"]
    },
    "types": [
"node"
    ],
    "typeRoots": ["./@types", "./node_modules/@types"],
  },
  "exclude": ["node_modules"]
}
